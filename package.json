{
    "name": "@mcanaleta/kdevops",
    "private": false,
    "version": "0.1.0",
    "engines": {
        "node": "20.10"
    },
    "main": "src/index.ts",
    "files": [
        "dist",
        "src",
        "package.json"
    ],
    "bin": {
        "kdevops": "bin/kdevops.js"
    },
    "module": "dist/index.js",
    "types": "src/index.ts",
    "scripts": {
        "dev": "pnpm run clean && nodemon --exec 'pnpm run build' --watch src --ext ts",
        "clean": "npx rimraf dist",
        "typecheck": "tsc --noEmit",
        "build": "swc src -d dist --config-file .swcrc --strip-leading-paths",
        "postinstall": "pnpm run build"
    },
    "dependencies": {
        "@google-cloud/firestore": "^7.3.0",
        "@google-cloud/storage": "^7.7.0",
        "@swc/cli": "^0.3.9",
        "@swc/core": "^1.4.2",
        "@swc/jest": "^0.2.36",
        "googleapis": "^133.0.0",
        "lodash": "^4.17.21",
        "luxon": "^3.4.4",
        "yaml": "^2.4.1",
        "yargs": "^17.7.2",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.202",
        "@types/node": "^20.11.20",
        "@types/yargs": "^17.0.32",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "env-cmd": "^10.1.0",
        "eslint": "^8.56.0",
        "nodemon": "^3.1.0",
        "pnpm": "^8.15.3",
        "rimraf": "^5.0.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.2.2"
    }
}